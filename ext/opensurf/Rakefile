# Generated by mkrf, monkey patched for opencv-ffi
require 'rake/clean'


SRC = FileList['*.cpp']
OBJ = SRC.ext('o')
CC = 'gcc'
CPP = 'g++'

CLEAN.include(OBJ)
CLOBBER.include('libcvffi_opensurf.so', 'mkrf.log', 'Rakefile')

ADDITIONAL_OBJECTS = ''

LDSHARED = "gcc -shared "

LIBPATH =  "-L/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/lib -L/localhome/amm299/usr/lib -L/localhome/amm299/usr/lib"

INCLUDES = "-I/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/include/ruby-1.9.1 -I/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/include/ruby-1.9.1/x86_64-linux -I/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/lib/ruby/1.9.1/x86_64-linux -I/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/lib/ruby/site_ruby/1.9.1 -I."

LIBS = "-lpthread -lrt -ldl -lcrypt -lm -lstdc++ -lopencv_core -lopencv_imgproc"

CFLAGS = "-fPIC  -O3 -ggdb -Wextra -Wno-unused-parameter -Wno-parentheses -Wpointer-arith -Wwrite-strings -Wno-missing-field-initializers -Wno-long-long  -fPIC -I/localhome/amm299/usr/include  "

RUBYARCHDIR = "#{ENV["RUBYARCHDIR"]}"
LIBRUBYARG_SHARED = "-Wl,-R -Wl,/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/lib -L/localhome/amm299/.rvm/rubies/ruby-1.9.2-p290/lib -lruby"

task :default => :build_library

# Add one layer of indirection so I can generically call "rake build_library"
# and have it work ... or not work if the wrong rakefile is being run
task :build_library => 'libcvffi_opensurf.so'

rule '.o' => '.c' do |t|
  sh "#{CC} #{CFLAGS} #{INCLUDES} -o #{t.name} -c #{t.source}"
end

rule '.o' => '.cpp' do |t|
  sh "#{CPP} #{CFLAGS} #{INCLUDES} -o #{t.name} -c #{t.source}"
end

DEPS = OBJ.clone.add('Rakefile')
desc "Build this extension"
file 'libcvffi_opensurf.so' => DEPS do
  sh "#{LDSHARED} #{LIBPATH} -o libcvffi_opensurf.so #{OBJ} #{ADDITIONAL_OBJECTS} #{LIBS} #{LIBRUBYARG_SHARED}"
end

desc "Rebuild rakefile"
file 'Rakefile' => 'mkrf_conf.rb' do |t|
  ruby 'mkrf_conf.rb'
  puts "Rebuilt Rakefile.  Run 'rake libcvffi_opensurf' again"
end

desc "Install this extension"
task :install => 'libcvffi_opensurf.so' do
  makedirs "#{RUBYARCHDIR}"
  install "libcvffi_opensurf.so", "#{RUBYARCHDIR}"
end


